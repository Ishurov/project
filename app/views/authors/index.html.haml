%h1= t('headers.authors.index')

%table
  %thead
    %tr
      %th= Author.human_attribute_name(:first_name)
      %th= Author.human_attribute_name(:second_name)
      %th= Author.human_attribute_name(:last_name)
      %th= Author.human_attribute_name(:index)
      %th
      %th
      %th

  %tbody
    - @authors.each do |author|
      %tr
        %td= author.first_name
        %td= author.second_name
        %td= author.last_name
        %td= author.index
        %td= link_to 'Show', author
        %td= link_to 'Edit', edit_author_path(author)
        %td= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Author', new_author_path

=breadcrumb_tag do
  %li.active
    = t('headers.stillages.index')
  %li
    Библиотека

.page-header
  %h1= t('headers.stillages.index')

%table.table.table-hover.table-striped
  %caption
    = link_to new_stillage_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.stillage') 
  %thead
    %tr
      %th= Stillage.human_attribute_name(:index)
      %th= Stillage.human_attribute_name(:hall)
      %th
      %th
      %th

  %tbody
    - @stillages.each do |stillage|
      %tr
        %td.center= stillage.index
        %td.center= stillage.hall.full_name + ' (' + stillage.hall.short_name + ')'
        %td.right
          = link_to stillage, class: 'btn btn-success'  do
            = fa_icon :eye
        %td.right
          = link_to edit_stillage_path(stillage), class: 'btn btn-info' do
            = fa_icon :edit
        %td.right
          = link_to stillage, :method => :delete, 
          :data => { :confirm => t('buttons.confirm.stillage') }, 
          class: 'btn btn-danger' do
            = fa_icon :times
%br

%br

=breadcrumb_tag do
  %li.active
    Книги
  %li
    Библиотека

%h1= t('app.books.index')
- if is_admin?
  = link_to new_book_path, class: 'btn btn-success' do
    = fa_icon :plus
    = t('buttons.new.book')
.table-responsive
  %table.table.table-hover.table-striped.center
    %caption
    %thead
      %tr
        %th= Book.human_attribute_name(:isbn)
        %th= Book.human_attribute_name(:name)
        %th= Book.human_attribute_name(:volume)
        %th= Book.human_attribute_name(:year_of_publishing)
        %th= Book.human_attribute_name(:number_of_shelf)
        %th= Book.human_attribute_name(:stack_id)
        %th= Book.human_attribute_name(:number_of_copies)
        %th= Author.human_attribute_name(:index_of_author)
        %th.p50
        %th.p50
        %th.p50

    %tbody
      - @books.each do |book|
        %tr
          %td= book.isbn
          %td= book.name
          %td= book.volume
          %td= book.year_of_publishing
          %td= book.number_of_shelf
          %td= book.stack.index
          %td= book.number_of_copies
          %td= book.authors.map{ |ru| ru.index_of_author}.join(', ')
          %td
            = link_to book, class: 'btn btn-success' do
              = fa_icon :eye
          - if is_admin?
            %td
              = link_to edit_book_path(book), class: 'btn btn-info' do
                = fa_icon :edit
          - if is_admin?
            %td
              = link_to book, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
                = fa_icon :times
